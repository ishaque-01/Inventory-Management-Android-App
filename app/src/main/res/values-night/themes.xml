<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme variation -->
    <style name="Theme.SoftMint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorDark</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primaryDarkColorDark</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColorDark</item>
        <item name="colorOnSecondary">@color/textOnPrimary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/primaryColorDark</item>
        <item name="android:colorBackground">@color/primaryColorDark</item>
        <item name="colorSurface">@color/surfaceDark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>
        <item name="colorOnSurface">@color/textPrimaryDark</item>

        <!-- Dividers -->
        <item name="dividerColor">@color/primaryDarkColorDark</item>

        <!-- Components -->
        <item name="bottomNavigationStyle">@style/Widget.SoftMint.BottomNavigationView.Dark</item>
        <item name="materialButtonStyle">@style/Widget.SoftMint.Button.Dark</item>
        <item name="textInputStyle">@style/Widget.SoftMint.TextInputLayout.Dark</item>
    </style>

    <!-- Dark Bottom Navigation -->
    <style name="Widget.SoftMint.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/iconColorDark</item>
        <item name="itemTextColor">@color/textPrimaryDark</item>
        <item name="itemBackground">@color/surfaceDark</item>
    </style>

    <!-- Dark Button Style -->
    <style name="Widget.SoftMint.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryDarkColorDark</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Dark Text Input -->
    <style name="Widget.SoftMint.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textSecondaryDark</item>
        <item name="android:textColorHint">@color/textSecondaryDark</item>
        <item name="hintTextColor">@color/textSecondaryDark</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.SoftMint" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>